<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBeyondHelloWorld.Views.CustomPage"
            xmlns:custom="clr-namespace:MauiBeyondHelloWorld.Customization"
             Title="CustomPage">
    
    <VerticalStackLayout Spacing="25" Padding="30">
        <Label
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Entry Placeholder="This is an Entry"/>

        <custom:CustomView HorizontalOptions="Center" VerticalOptions="EndAndExpand"
            Title="Custom View Title" />
    </VerticalStackLayout>
</ContentPage>