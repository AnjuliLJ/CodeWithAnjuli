<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EntraExternalIDForCustomers.ProductsPage"
             Title="ProductsPage">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            
            <Label x:Name="ProductLabel"
                Text=""
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            
            <Button Text="Get product name"
                VerticalOptions="Center" 
                Clicked="OnGetProductNameClicked"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>