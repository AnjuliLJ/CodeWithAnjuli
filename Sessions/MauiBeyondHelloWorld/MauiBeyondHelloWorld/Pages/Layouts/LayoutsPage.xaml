<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBeyondHelloWorld.Pages.Layouts.LayoutsPage"
             Title="Layouts">
    <VerticalStackLayout Spacing="25">
        <Label 
            Text="Try out different layouts!"
            FontSize="Title"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button 
            Text="Go to AbsoluteLayout"
            VerticalOptions="Center"
            HorizontalOptions="Center" 
            Clicked="AbsoluteButton_Clicked"/>
            
        <Button 
            Text="Go to GridLayout"
            VerticalOptions="Center"
            HorizontalOptions="Center" 
            Clicked="GridButton_Clicked"/>

        <Button 
            Text="Go to HorizontalStackLayout"
            VerticalOptions="Center"
            HorizontalOptions="Center" 
            Clicked="HorizontalStackButton_Clicked"/>

        <Button 
            Text="Go to FlexLayout"
            VerticalOptions="Center"
            HorizontalOptions="Center" 
            Clicked="FlexButton_Clicked"/>

    </VerticalStackLayout>
</ContentPage>